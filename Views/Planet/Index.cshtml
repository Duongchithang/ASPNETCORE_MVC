@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject WebApplication4.Services.PlanetService planetService
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Các hành tinh trong hệ mặt trời</h1>
<div class="list-group">
    @foreach(var planet in planetService)
    {
        <a class="list-group-item list-group-action" asp-controller="Planet" asp-action="@planet.Name">
            @planet.VnName - @planet.Name
        </a>
    }
</div>